<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<p><%= notice %></p>
<%= link_to"Tweetを作成する", new_tweet_path, class:'btn btn-default' %>
<h1>Tweet一覧</h1>
<% @tweets.each do |tweet| %>
<div class="row">
<p><%= tweet.content %></p>
<%= link_to"編集する", edit_tweet_path(tweet.id) %>
<%= link_to"削除する", tweet_path(tweet.id), method: :delete, data:{confirm:'本当に削除していいですか？'} %>
</div>
 <% end %>
</div>
</div>




